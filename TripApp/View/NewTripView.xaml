<Window x:Class="TripApp.View.TripListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripApp.View"
        mc:Ignorable="d"
        Title="NewTripView" Height="500" Width="700">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="Header" Background="#4286f4" VerticalAlignment="Top" FontSize="50" Height="80">New Trip</TextBlock>
            <ScrollViewer>
                <StackPanel >
                    <TextBlock Margin="10" FontSize="25">England</TextBlock>
                    <Button x:Name="AddEngland" HorizontalAlignment="Left" Width="60" Height="20" Background="LightGray"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
